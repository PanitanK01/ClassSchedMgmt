<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyPlanner.Controls.ToggleButton"
             x:Name="toggleButton">

    <StackLayout Padding="8" VerticalOptions="Center">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnToggledChanged" />
        </StackLayout.GestureRecognizers>
        <Image>
            <Image.Source>
                <FontImageSource x:Name="icon" FontFamily="Icons" Color="{Binding Color, Source={Reference toggleButton}}" Size="24" />
            </Image.Source>
        </Image>
    </StackLayout>
    
</ContentView>