<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyPlanner.Controls.NoData"
             x:Name="noData">


    <StackLayout HorizontalOptions="Center" Spacing="{DynamicResource StackSpacing}" Padding="{DynamicResource PagePadding}">
        <Label Text="{Binding Icon, Source={Reference noData}}" FontFamily="Icons" FontSize="64" TextColor="{DynamicResource TitleCardColor}" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Description, Source={Reference noData}}" FontSize="Medium" TextColor="{DynamicResource DescriptionColor}" HorizontalTextAlignment="Center" />
    </StackLayout>

</ContentView>