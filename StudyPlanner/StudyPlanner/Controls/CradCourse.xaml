<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyPlanner.Controls.CradCourse"
              x:Name="cardCourse">
    
     <Frame Style="{DynamicResource CardStyle}">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnCardClicked" />
        </Frame.GestureRecognizers>
        <StackLayout Spacing="{DynamicResource TextSpacing}">
            <Label Text="{Binding Description, Source={Reference cardCourse}}" Style="{DynamicResource DescriptionInactiveStyle}"/>
        </StackLayout>
        </Frame>
</ContentView>